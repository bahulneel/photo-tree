<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<title>{% block title %}Photo Tree{% endblock %}</title>
	{% block stylesheets %}
	<link href="{{ asset('/css/main.css') }}" type="text/css" rel="stylesheet" />
	{% endblock %}
</head>
<body>
	<div class="head">
		<div class="menu">
		    {% if app.user %}
			<a href="{{ path('PhotoTreeSecurityBundle_logout') }}">Logout</a>
			{% else %}
			<a href="{{ path('PhotoTreeSecurityBundle_login') }}">Login</a>
			{% endif %}
		</div>
		
		<div class="search">
		  <a href="{{ path('PhotoTreeAlbumBundle_search') }}">[ Search ]</a>
		</div>

		<div class="logo">
		 <a href="{{ path('PhotoTreeAlbumBundle_homepage') }}">[ PhotoTree logo ]</a>
		</div>
	</div>
	<div class="left">{% block left %}
	{% endblock %}</div>
	
	<div class="right">{% block right %}
		RIGHT
	{% endblock %}</div>
	
	<div class="content">
		{% block body %}{% endblock %}
	</div>
	<div class="foot">FOOT
	</div>
	{% block javascripts %}
	<script src="{{ asset('/js/main.js') }}" type="text/javascript"></script>
	{% endblock %}
</body>
</html>